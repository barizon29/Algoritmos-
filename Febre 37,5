#include <stdio.h>

/*se a temperatura for maior que 37,5 mostrar que está com febre*/

int main()
{
    float temperatura = 0;
    
    printf("Qual a sua temperatura atual: ");
    scanf("%F", &temperatura);
    
    if (temperatura >= 37.5){
        printf("Você está com febre");
    }
    
    if (temperatura < 37.5){
        printf("Você está bem \n");
    }
    
    printf("Cuide-se sempre");
    
    return 0;
}
