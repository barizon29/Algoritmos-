#include <stdio.h>

/*se a temperatura for maior que 37,5 mostrar que estÃ¡ com febre*/

int main()
{
    float temperatura = 0;
    
    printf("Qual a sua temperatura atual: ");
    scanf("%F", &temperatura);
    
    if (temperatura > 40){
        printf("febre alta");
    }
    
    if (temperatura < 38){
        printf("Febre baixa");
    }
    
    if(temperatura >= 38 &&temperatura <= 40){
        printf("Febre media");
    }
    
    
    printf("\nCuide-se sempre");
    
    return 0;
}
